# LiveStream Platform Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
APP_NAME=livestream

# =============================================================================
# HOST CONFIGURATION
# =============================================================================
HOST=localhost
DOMAIN=localhost

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
MONGODB_PORT=27017
REDIS_PORT=6379
BACKEND_PORT=9000
FRONTEND_PORT=3000
RTMP_PORT=1935
GRAFANA_PORT=8080
PROMETHEUS_PORT=9090

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth (Optional - Leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:9000/api/v1/auth/google/callback

# =============================================================================
# URL CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:9000/api/v1
WS_BASE_URL=ws://localhost:9000
HLS_BASE_URL=http://localhost:9000/api/v1
RTMP_BASE_URL=rtmp://localhost:1935
NGINX_URL=http://localhost:9000
GRAFANA_URL=http://localhost:8080
PROMETHEUS_URL=http://localhost:9090

# =============================================================================
# HLS STREAMING CONFIGURATION
# =============================================================================
HLS_FRAGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
HLS_CLEANUP_INTERVAL=300

# =============================================================================
# DOCKER NETWORK
# =============================================================================
DOCKER_NETWORK=livestream-network

# =============================================================================
# SERVICE NAMES (for container naming)
# =============================================================================
MONGODB_SERVICE_NAME=mongodb
REDIS_SERVICE_NAME=redis

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Grafana Admin (Default: admin/admin123)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# =============================================================================
# NOTES
# =============================================================================
# 1. This file is for Docker Compose configuration
# 2. Change HOST and DOMAIN for production deployment
# 3. All URLs are auto-generated from HOST and ports
# 4. JWT_SECRET will be auto-generated if left as default
# 5. Google OAuth is optional - leave empty to disable
# 6. All services run in Docker containers
