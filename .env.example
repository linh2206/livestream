# Livestream Platform Environment Configuration
# Copy this file to .env and update values as needed

# ===========================================
# APPLICATION URLs (REQUIRED)
# ===========================================
# These URLs are used by the application and must be set correctly
API_BASE_URL=http://localhost/api/v1
FRONTEND_URL=http://localhost
HLS_BASE_URL=http://localhost/api/v1
RTMP_BASE_URL=rtmp://localhost:1935
WS_BASE_URL=ws://localhost
NGINX_URL=http://localhost

# ===========================================
# PORTS (OPTIONAL - defaults provided)
# ===========================================
RTMP_PORT=1935
NGINX_HTTP_PORT=80
FRONTEND_PORT=3000
BACKEND_PORT=9000

# ===========================================
# AUTHENTICATION (REQUIRED)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# HLS CONFIGURATION (OPTIONAL)
# ===========================================
HLS_FRAGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
HLS_CLEANUP_INTERVAL=300

# ===========================================
# FRONTEND CONFIGURATION (OPTIONAL)
# ===========================================
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ===========================================
# MONITORING URLs (OPTIONAL)
# ===========================================
GRAFANA_URL=http://localhost:8080
PROMETHEUS_URL=http://localhost:9090

# ===========================================
# DATABASE (INTERNAL - DO NOT CHANGE)
# ===========================================
MONGODB_PORT=27017
REDIS_PORT=6379
