# LiveStream Platform Environment Configuration
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Ports Configuration
MONGODB_PORT=27017
REDIS_PORT=6379
BACKEND_PORT=9000
FRONTEND_PORT=3000
RTMP_PORT=1935
PROMETHEUS_PORT=9090
GRAFANA_PORT=8080
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=9216
ALERTMANAGER_PORT=9121

# URLs Configuration
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:9000/api/v1
WS_BASE_URL=ws://localhost:9000
RTMP_BASE_URL=rtmp://localhost:1935
HLS_BASE_URL=http://localhost:9000/api/v1
NGINX_URL=http://localhost:9000

# HLS Configuration
HLS_FRAGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
HLS_CLEANUP_INTERVAL=300

# Docker Network
DOCKER_NETWORK=livestream-network

# Monitoring URLs
GRAFANA_URL=http://localhost:8080
PROMETHEUS_URL=http://localhost:9090

# Internal Service URLs (for healthchecks)
MONGODB_INTERNAL_URI=mongodb://mongodb:27017/livestream
REDIS_INTERNAL_URL=redis://redis:6379
