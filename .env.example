# ===========================================
# LIVESTREAM PLATFORM ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values as needed

# ===========================================
# APPLICATION URLs (REQUIRED)
# ===========================================
# These URLs are used by the application and must be set correctly
API_BASE_URL=http://183.182.104.226:24190/api/v1
FRONTEND_URL=http://localhost:3000
HLS_BASE_URL=http://localhost:8080/api/v1
RTMP_BASE_URL=rtmp://localhost:1935
WS_BASE_URL=ws://183.182.104.226:24190
NGINX_URL=http://localhost:8080

# ===========================================
# PORTS (REQUIRED - Updated)
# ===========================================
RTMP_PORT=1935
NGINX_HTTP_PORT=8080
FRONTEND_PORT=3000
BACKEND_PORT=9000

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
MONGODB_URI=mongodb://mongodb:27017/livestream
REDIS_URL=redis://redis:6379

# ===========================================
# MONITORING URLs (UPDATED)
# ===========================================
GRAFANA_URL=http://localhost:8000
PROMETHEUS_URL=http://localhost:9090

# ===========================================
# PORTS (INTERNAL)
# ===========================================
MONGODB_PORT=27017
REDIS_PORT=6379
GRAFANA_PORT=8000
PROMETHEUS_PORT=9090
PORT=9000

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ===========================================
# HLS CONFIGURATION (OPTIONAL)
# ===========================================
HLS_FRAGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
HLS_CLEANUP_INTERVAL=300
HLS_SEGMENT_DURATION=6
HLS_PLAYLIST_FILENAME=playlist.m3u8

# ===========================================
# RTMP CONFIGURATION (OPTIONAL)
# ===========================================
RTMP_APPLICATION=live
RTMP_STREAM_TIMEOUT=30
RTMP_PING_TIMEOUT=10
RTMP_PING_INTERVAL=30

# ===========================================
# FILE UPLOAD CONFIGURATION (OPTIONAL)
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===========================================
# FRONTEND CONFIGURATION (OPTIONAL)
# ===========================================
HLS_PATH=./hls/stream

# ===========================================
# LOGGING CONFIGURATION (OPTIONAL)
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# WEBHOOK URLs (OPTIONAL)
# ===========================================
WEBHOOK_URL=
ALERT_WEBHOOK_URL=

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development

