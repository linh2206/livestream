# Livestream Platform Environment Configuration
# Copy this file to .env and update values as needed

# ===========================================
# APPLICATION URLs (REQUIRED)
# ===========================================
# These URLs are used by the application and must be set correctly
API_BASE_URL=http://localhost:9000/api/v1
FRONTEND_URL=http://localhost:3000
HLS_BASE_URL=http://localhost:9000/api/v1
RTMP_BASE_URL=rtmp://localhost:1935
WS_BASE_URL=ws://localhost:9000
NGINX_URL=http://localhost:8080

# ===========================================
# PORTS (REQUIRED - Updated)
# ===========================================
RTMP_PORT=1935
NGINX_HTTP_PORT=8080
FRONTEND_PORT=3000
BACKEND_PORT=9000

# ===========================================
# AUTHENTICATION (REQUIRED)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/livestream
REDIS_URL=redis://localhost:6379
MONGODB_DATABASE=livestream

# ===========================================
# HLS CONFIGURATION (OPTIONAL)
# ===========================================
HLS_FRAGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
HLS_CLEANUP_INTERVAL=300
HLS_SEGMENT_DURATION=6
HLS_PLAYLIST_FILENAME=playlist.m3u8

# ===========================================
# STREAMING CONFIGURATION
# ===========================================
RTMP_APP=live
STREAM_TIMEOUT=300
MAX_STREAMS=10

# ===========================================
# FRONTEND CONFIGURATION (OPTIONAL)
# ===========================================
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ===========================================
# MONITORING URLs (UPDATED)
# ===========================================
GRAFANA_URL=http://localhost:8000
PROMETHEUS_URL=http://localhost:9090

# ===========================================
# PORTS (INTERNAL)
# ===========================================
MONGODB_PORT=27017
REDIS_PORT=6379
GRAFANA_PORT=8000
PROMETHEUS_PORT=9090
PORT=9000

# ===========================================
# GOOGLE OAUTH (OPTIONAL)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
UPLOAD_PATH=./uploads
HLS_PATH=./hls/stream
THUMBNAIL_PATH=./uploads/thumbnails
MAX_FILE_SIZE=50MB

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_METRICS=true

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@livestream.com

# ===========================================
# WEBHOOK URLs (OPTIONAL)
# ===========================================
WEBHOOK_URL=
ALERT_WEBHOOK_URL=

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development
DEBUG=true
ENABLE_HOT_RELOAD=true

# ===========================================
# PRODUCTION OVERRIDES (Uncomment for production)
# ===========================================
# NODE_ENV=production
# DEBUG=false
# API_BASE_URL=https://yourdomain.com/api/v1
# FRONTEND_URL=https://yourdomain.com
# NGINX_URL=https://yourdomain.com
# GRAFANA_URL=https://monitoring.yourdomain.com
# PROMETHEUS_URL=https://metrics.yourdomain.com
