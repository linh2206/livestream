{
  "name": "livestream-frontend",
  "version": "1.0.0",
  "description": "Next.js Frontend for LiveStream App",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:prod": "cp .env.production .env.local && next dev -p 3000",
    "dev:docker": "cp .env.docker .env.local && next dev -p 3000",
    "build": "next build",
    "build:prod": "cp .env.production .env.local && next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "env:dev": "./switch-env.sh development",
    "env:prod": "./switch-env.sh production",
    "env:docker": "./switch-env.sh docker"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.5.0",
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "hls.js": "^1.4.0",
    "lucide-react": "^0.280.0",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.0",
    "react-hot-toast": "^2.4.0",
    "socket.io-client": "^4.7.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0"
  }
}
