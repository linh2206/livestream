# Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:9000/api/v1

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
NEXT_PUBLIC_WS_URL=ws://localhost:9000

# =============================================================================
# STREAMING CONFIGURATION
# =============================================================================
NEXT_PUBLIC_RTMP_URL=rtmp://localhost:1935

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000

# =============================================================================
# NOTES
# =============================================================================
# 1. This file is for frontend development only
# 2. All NEXT_PUBLIC_ variables are exposed to the browser
# 3. Production values should be set in docker-compose.yml or environment
# 4. Use .env.local for local development (not committed to git)
