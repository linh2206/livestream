# Backend Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=9000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://mongodb:27017/livestream

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# GOOGLE OAUTH (Optional)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:9000/api/v1/auth/google/callback

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# STREAMING CONFIGURATION
# =============================================================================
HLS_BASE_URL=http://localhost:9000/api/v1
RTMP_BASE_URL=rtmp://localhost:1935
NGINX_URL=http://localhost:9000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_BASE_URL=ws://localhost:9000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:9000/api/v1

# =============================================================================
# NOTES
# =============================================================================
# 1. This file is for backend development only
# 2. Production values should be set in docker-compose.yml or environment
# 3. Database and Redis URLs use Docker service names
# 4. JWT_SECRET will be auto-generated if left as default
