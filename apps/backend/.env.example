# ===========================================
# BACKEND ENVIRONMENT CONFIG
# ===========================================

# Application Configuration
NODE_ENV=production
PORT=9000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/livestream
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=livestream-super-secret-jwt-key-2024-production-ready
JWT_EXPIRES_IN=7days

# API Configuration
API_BASE_URL=http://localhost:9000
FRONTEND_URL=http://localhost:3000
HLS_BASE_URL=http://localhost:8080/hls
HLS_FRAGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
HLS_CLEANUP_INTERVAL=300

# RTMP Configuration
RTMP_BASE_URL=rtmp://localhost:1935/live

# WebSocket Configuration
WS_BASE_URL=ws://localhost:9000

# Nginx Configuration
NGINX_URL=http://localhost:8080

# Security Configuration
CORS_ORIGIN=http://localhost:3000

# Performance Configuration
MAX_CONNECTIONS=1000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# File Paths
HLS_DIR=/app/hls
LOGS_DIR=/app/logs

# Cache Configuration
CACHE_TTL=300
SESSION_TTL=3600
METRICS_TTL=60
