# ===========================================
# LIVESTREAM APPLICATION ENVIRONMENT CONFIG
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://mongodb:27017/livestream
REDIS_URL=redis://redis:6379

# ===========================================
# APPLICATION PORTS
# ===========================================
# Frontend (Next.js)
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Backend (NestJS)
PORT=9000
API_BASE_URL=http://localhost:9000

# Nginx
NGINX_PORT=8080

# RTMP Server
RTMP_PORT=1935

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# These are used by Next.js frontend
NEXT_PUBLIC_API_URL=http://localhost:9000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:9000
NEXT_PUBLIC_RTMP_URL=rtmp://localhost:1935

# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================
# HLS streaming configuration
HLS_BASE_URL=http://localhost:9000/api/v1
RTMP_BASE_URL=rtmp://localhost:1935

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Docker service names (for internal communication)
MONGODB_SERVICE=mongodb
REDIS_SERVICE=redis
FRONTEND_SERVICE=frontend
BACKEND_SERVICE=backend
NGINX_SERVICE=nginx

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# STREAMING CONFIGURATION
# ===========================================
# HLS fragment settings
HLS_FRAGMENT_DURATION=3
HLS_PLAYLIST_LENGTH=3600

# Stream cleanup settings
STREAM_CLEANUP_INTERVAL=3600000
STREAM_AUTO_DELETE_DELAY=300000
