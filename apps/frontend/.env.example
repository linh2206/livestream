# ===========================================
# FRONTEND ENVIRONMENT CONFIG
# ===========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://192.168.150.249:9000/api/v1
NEXT_PUBLIC_HLS_BASE_URL=http://192.168.150.249:9000/api/v1
NEXT_PUBLIC_WS_URL=ws://192.168.150.249:9000
NEXT_PUBLIC_RTMP_URL=rtmp://192.168.150.249/:1935/live

# Performance Configuration
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000

# Debug Configuration
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Application Configuration
NEXT_PUBLIC_APP_NAME=LiveStream Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Professional Live Streaming Platform

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_LIKES=true
NEXT_PUBLIC_ENABLE_SHARING=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# UI Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_LANGUAGE=en
NEXT_PUBLIC_TIMEZONE=UTC

# Security Configuration
NEXT_PUBLIC_ENABLE_HTTPS=false
NEXT_PUBLIC_ENABLE_CORS=true

# Monitoring Configuration
NEXT_PUBLIC_ENABLE_METRICS=true
NEXT_PUBLIC_METRICS_ENDPOINT=http://192.168.150.249:9000/api/v1/metrics

# Streaming Configuration
NEXT_PUBLIC_DEFAULT_QUALITY=720p
NEXT_PUBLIC_SUPPORTED_QUALITIES=360p,720p,1080p
NEXT_PUBLIC_AUTO_QUALITY=true

# Social Features
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_USER_PROFILES=true
NEXT_PUBLIC_ENABLE_FOLLOWERS=true
